<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!--link rel="shortcut icon" href="../../docs-assets/ico/favicon.png"-->
    {# ToDo: Translate-able System Title variable #}
    <title>{% block title %}Kotobi{% endblock %}</title>


    {% block styles %}
        <!-- Bootstrap core CSS -->
        <link href="{{ asset('bundles/wesamlykotobi/css/bootstrap.min.css') }}" rel="stylesheet">

        <!-- Custom styles for this template -->
        <link href="{{ asset('bundles/wesamlykotobi/css/backend.css') }}" rel="stylesheet">
    {% endblock %}

</head>

<body>

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('wesamly_kotobi_homepage') }}">Kotobi</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li {% if app.request.attributes.get('_route') == 'wesamly_kotobi_homepage' %}class="active"{% endif %}><a href="{{ path('wesamly_kotobi_homepage') }}">Home</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Books <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('wesamly_kotobi_bookslist') }}">List</a></li>
                        <li><a href="{{ path('wesamly_kotobi_addbook') }}">Add</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Categories <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('wesamly_kotobi_categorylist') }}">List</a></li>
                        <li><a href="{{ path('wesamly_kotobi_addcategory') }}">Add</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Users <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('wesamly_kotobi_userlist') }}">List</a></li>
                        <li><a href="{{ path('wesamly_kotobi_adduser') }}">Add</a></li>
                    </ul>
                </li>
                <li {% if app.request.attributes.get('_route') == 'wesamly_kotobi_about' %}class="active"{% endif %}><a href="{{ path('wesamly_kotobi_about') }}">About</a></li>
                <li><a href="{{ path('wesamly_kotobi_logout') }}">Logout</a></li>
            </ul>

            <p class="navbar-text navbar-right">
                Signed in as <strong><a href="#" class="navbar-link">{{ app.user.username }}</a></strong>
            </p>

        </div><!--/.nav-collapse -->
    </div>
</div>

<div class="container">

    <div class="wrapper">
        {% block breadcrumb %}
            <ol class="breadcrumb">
                <li class="active">Dashboard</li>
            </ol>
        {% endblock %}
        {% block content %}
        <h1>Bootstrap starter template</h1>
        <p class="lead">Use this document as a way to quickly start any new project.<br> All you get is this text and a mostly barebones HTML document.</p>
        {% endblock %}
    </div>

    <hr>

    <footer>
        <p>&copy; <a href="http://wesam.ly">Wesam.ly</a> 2013</p>
    </footer>

</div><!-- /.container -->

{% block javascripts %}
<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="{{ asset('bundles/wesamlykotobi/js/jquery-1.10.2.min.js') }}"></script>
<script src="{{ asset('bundles/wesamlykotobi/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('bundles/wesamlykotobi/js/backend.js') }}"></script>
{% endblock %}
</body>
</html>