<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!--link rel="shortcut icon" href="../../docs-assets/ico/favicon.png"-->
    {# ToDo: Translate-able System Title variable #}
    <title>{% block title %}{% trans %}Kotobi{% endtrans %}{% endblock %}</title>


    {% block styles %}
        <!-- Bootstrap core CSS -->
        <link href="{{ asset('bundles/wesamlykotobi/css/bootstrap.min.css') }}" rel="stylesheet">

        <!-- Custom styles for this template -->
        <link href="{{ asset('bundles/wesamlykotobi/css/backend.css') }}" rel="stylesheet">

        {% if app.request.locale == 'ar' %}
            <link href="{{ asset('bundles/wesamlykotobi/css/backend_rtl.css') }}" rel="stylesheet">
        {% endif %}
    {% endblock %}

</head>

<body>

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('wesamly_kotobi_homepage') }}">{% trans %}Kotobi{% endtrans %}</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li {% if app.request.attributes.get('_route') == 'wesamly_kotobi_homepage' %}class="active"{% endif %}><a href="{{ path('wesamly_kotobi_homepage') }}">{% trans %}Dashboard{% endtrans %}</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">{% trans %}Books{% endtrans %} <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('wesamly_kotobi_bookslist') }}">{% trans %}List{% endtrans %}</a></li>
                        <li><a href="{{ path('wesamly_kotobi_addbook') }}">{% trans %}Add{% endtrans %}</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">{% trans %}Categories{% endtrans %} <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('wesamly_kotobi_categorylist') }}">{% trans %}List{% endtrans %}</a></li>
                        <li><a href="{{ path('wesamly_kotobi_addcategory') }}">{% trans %}Add{% endtrans %}</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">{% trans %}Tags{% endtrans %} <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('wesamly_kotobi_taglist') }}">{% trans %}List{% endtrans %}</a></li>
                        <li><a href="{{ path('wesamly_kotobi_addtag') }}">{% trans %}Add{% endtrans %}</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">{% trans %}Users{% endtrans %} <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('wesamly_kotobi_userlist') }}">{% trans %}List{% endtrans %}</a></li>
                        <li><a href="{{ path('wesamly_kotobi_adduser') }}">{% trans %}Add{% endtrans %}</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">{% trans %}Language{% endtrans %} <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('wesamly_kotobi_setlang', { _locale: 'en'}) }}">English</a></li>
                        <li><a href="{{ path('wesamly_kotobi_setlang', { _locale: 'ar'}) }}">العربية</a></li>
                    </ul>
                </li>
                <li {% if app.request.attributes.get('_route') == 'wesamly_kotobi_about' %}class="active"{% endif %}><a href="{{ path('wesamly_kotobi_about') }}">{% trans %}About{% endtrans %}</a></li>
                <li><a href="{{ path('wesamly_kotobi_logout') }}">{% trans %}Logout{% endtrans %}</a></li>
            </ul>

            <p class="navbar-text navbar-right">
                {% trans %}Signed in as{% endtrans %} <strong><a href="#" class="navbar-link">{{ app.user.username }}</a></strong>
            </p>

        </div><!--/.nav-collapse -->
    </div>
</div>

<div class="container">

    <div class="wrapper">
        {% block breadcrumb %}
            <ol class="breadcrumb">
                <li class="active">{% trans %}Dashboard{% endtrans %}</li>
            </ol>
        {% endblock %}
        {% block content %}
        <!-- content will be added using extending files -->
        {% endblock %}
    </div>

    <hr>

    <footer>
        <p>&copy; <a href="http://wesam.ly">Wesam.ly</a> 2013</p>
    </footer>

</div><!-- /.container -->

{% block javascripts %}
<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="{{ asset('bundles/wesamlykotobi/js/jquery-1.10.2.min.js') }}"></script>
<script src="{{ asset('bundles/wesamlykotobi/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('bundles/wesamlykotobi/js/backend.js') }}"></script>
{% endblock %}
</body>
</html>