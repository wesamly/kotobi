{% extends 'WesamlyKotobiBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - Delete Category{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ path('wesamly_kotobi_homepage') }}">Dashboard</a></li>
        <li><a href="{{ path('wesamly_kotobi_categorylist') }}">Categories</a></li>
        <li class="active">Delete</li>
    </ol>
{% endblock %}

{% block content %}
    <h1>Delete Category</h1>

    <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title">{{ category.name }}</h3>
        </div>
        <div class="panel-body">
            <p>Are you sure about deleting this category?</p>
            {{ form_start(form) }}

            {{ form_widget(form.confirm, {'attr': {'class': 'btn btn-danger'}}) }}

            {{ form_widget(form.cancel, {'attr': {'class': 'btn btn-default'}}) }}

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}