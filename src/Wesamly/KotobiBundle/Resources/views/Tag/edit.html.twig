{% extends 'WesamlyKotobiBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - Edit Tag{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ path('wesamly_kotobi_homepage') }}">Dashboard</a></li>
        <li><a href="{{ path('wesamly_kotobi_taglist') }}">Tags</a></li>
        <li class="active">Edit</li>
    </ol>
{% endblock %}

{% block content %}
    <h1>{% if app.request.get('id') !='' %}Edit{% else %}Add{% endif %} Tag</h1>

    {{ form_start(form, {'attr': {'id': 'form_book_edit'}}) }}

    <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.name) }}
    </div>

    {{ form_widget(form.save, {'attr': {'class': 'btn btn-default'}}) }}

    {{ form_end(form) }}

{% endblock %}