<body class="signin">

<div class="container">
    {% if error %}
        <div class="row">
            <div class="alert alert-danger">{{ error.message }}</div>
        </div>

{% endif %}



    <form class="form-signin" role="form" action="{{ path('wesamly_kotobi_login_check') }}" method="post">
        <h2 class="form-signin-heading">Please login</h2>
        <input type="text" class="form-control" placeholder="Username" required autofocus id="username" name="_username" value="{{ last_username }}">
        <input type="password" class="form-control" placeholder="Password" required id="password" name="_password">

        {#
        <label class="checkbox">
            <input type="checkbox" value="remember-me"> Remember me
        </label>
        #}

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <input type="hidden" name="_target_path" value="/kotobi/" />

    </form>

</div> <!-- /container -->


